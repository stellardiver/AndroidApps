<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">#fff</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="ActivityDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTitleStyle">@style/ActivityDialog</item>
    </style>
    <style name="square_footer_imagebutton_style">
        <item name="android:textSize">@dimen/square_footer_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#545454</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/square_footer_button_padding</item>
        <item name="android:paddingBottom">@dimen/square_footer_button_padding</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minWidth">@dimen/square_footer_button_style_min_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="mirror_footer_imagebutton">
        <item name="android:textSize">@dimen/mirror_footer_button_text_size</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingTop">@dimen/mirror_footer_button_padding</item>
        <item name="android:paddingBottom">@dimen/mirror_footer_button_padding</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="mirror_button_style">
        <item name="android:textSize">@dimen/mirror_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">@dimen/mirror_button_padding</item>
        <item name="android:layout_width">60.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="mirror_footer_imagebutton_style">
        <item name="android:textSize">@dimen/mirror_footer_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/mirror_footer_button</item>
        <item name="android:paddingTop">@dimen/mirror_footer_button_padding</item>
        <item name="android:paddingBottom">@dimen/mirror_footer_button_padding</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="mirror_ratio_button_style">
        <item name="android:textSize">@dimen/mirror_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_mirror_ratio_button</item>
        <item name="android:padding">3.0dip</item>
        <item name="android:layout_width">@dimen/mirror_ratio_button_width</item>
        <item name="android:layout_height">@dimen/mirror_ratio_button_height</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="myImageView">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="BottomImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

</resources>
